<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/store_container"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginStart="@dimen/margin_padding_l"
	android:layout_marginTop="@dimen/margin_padding_s"
	android:layout_marginBottom="@dimen/margin_padding_s">

	<ImageView
		android:id="@+id/private_store"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		tools:layout_height="45dp"
		tools:layout_width="45dp" />

	<TextView
		android:id="@+id/store_name"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="@dimen/margin_padding_xl"
		android:ellipsize="end"
		android:gravity="center_vertical"
		android:textSize="14sp"
		android:maxLines="1"
		android:layout_marginEnd="@dimen/margin_padding_xl"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@+id/private_store"
		app:layout_constraintTop_toTopOf="parent"
		tools:text="Название репозитория" />

</androidx.constraintlayout.widget.ConstraintLayout>